<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AdminMapper">
	
	<resultMap type="com.bg.jtown.business.Interest" id="interestCategoryMap">
		<result property="categoryPn" column="pn" />
		<result property="name" column="name"/>
	</resultMap>
	
	<select id="getInterestCategoryList" resultMap="interestCategoryMap">
		SELECT
			pn, name
		FROM
			interest_category
	</select>
	
	<select id="interestSectionPn" parameterType="String" resultType="Integer">
		SELECT
			pn
		FROM
			interest_section
		WHERE
			name = #{interest}
	</select>
	
	<insert id="insertInterestSection" parameterType="com.bg.jtown.business.Interest">
		INSERT INTO
			interest_section
			(
				category_pn, name
			)
		VALUES
			(
				#{categoryPn}, #{name}
			)
		<selectKey keyProperty="sectionPn" resultType="Integer">
			SELECT LAST_INSERT_ID()
		</selectKey>			
	</insert>
	
	<insert id="insertUserInterest" parameterType="com.bg.jtown.business.Interest">
		INSERT INTO
			user_seller_interest
			(
				seller_pn, section_pn
			)
		VALUES
			(
				#{sellerPn}, #{sectionPn}
			)
	</insert>
</mapper>