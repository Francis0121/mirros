<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 1. Cron 대상이 되는 클래스 정의 -->
	<bean id="hotQuartz" class="org.springframework.scheduling.quartz.JobDetailBean">
	    <property name="jobClass" value="com.bg.mirros.quartz.CronQuartz"/>
	    <property name="jobDataAsMap">
	    	<map>
	    		<entry key="jobLauncher" value-ref="jobLauncher"/>
	    		<entry key="jobLocator" value-ref="jobRegistry"/>
	    		<entry key="jobName" value="hotSellerJob"/>
	    	</map>
	    </property>
	</bean>
	
	<bean id="userQuartz" class="org.springframework.scheduling.quartz.JobDetailBean">
	    <property name="jobClass" value="com.bg.mirros.quartz.CronQuartz"/>
	    <property name="jobDataAsMap">
	    	<map>
	    		<entry key="jobLauncher" value-ref="jobLauncher"/>
	    		<entry key="jobLocator" value-ref="jobRegistry"/>
	    		<entry key="jobName" value="userDeleteJob"/>
	    	</map>
	    </property>
	</bean>
	
	<!-- 2. Cron 시간 설정 -->
	<bean id="hotTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
	    <property name="jobDetail" ref="hotQuartz"/>
	    <property name="cronExpression" value="0 0 2 * * ?"/>
<!-- 	    <property name="cronExpression" value="0 21 14 * * ?"/> -->
	</bean>
	
	<bean id="userTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
	    <property name="jobDetail" ref="userQuartz"/>
	    <property name="cronExpression" value="0 0 3 * * ?"/>
<!-- 	    <property name="cronExpression" value="0 22 14 * * ?"/> -->
	</bean>
	
	<!-- 3. Cron 실행 -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
	    <property name="triggers">
	        <list>
	            <ref bean="hotTrigger"/>
	            <ref bean="userTrigger"/>
	        </list>
	    </property>
	    <property name="quartzProperties">
	        <props>
	            <prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
	            <prop key="org.quartz.threadPool.threadCount">3</prop>
	            <prop key="org.quartz.threadPool.threadPriority">4</prop>
	            <prop key="org.quartz.jobStore.class">org.quartz.simpl.RAMJobStore</prop>
	            <prop key="org.quartz.jobStore.misfireThreshold">60000</prop>
	        </props>
	    </property>
	</bean>

</beans>
